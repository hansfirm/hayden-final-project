{% extends '_layouts/base.njk' %}

{% block page_title %}Queen Tour{% endblock %}

{% block page_description %}Queen's tour dates, locations and venues.{% endblock %}

{% block content %}
<div class="row">
  <div class="col-sm-10">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Stop #</th>
          <th scope="col">Date</th>
          <th scope="col">City</th>
          <th scope="col">Venue</th>
        </tr>
      </thead>
     <tbody>
      {% asyncEach entry in tour.tourdates %}
        <tr>
          <th scope="row">{{entry.realnumber}}</th>
          <td>{{entry.date}}</td>
          <td>{{entry.city}}</td>
          <td>{{entry.venue}}</td>
        </tr>
      {% endeach%}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}